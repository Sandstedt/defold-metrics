go.property("show", true)
go.property("color", vmath.vector4(0, 0, 1, 1))
go.property("samples", 60)

local fps = require "metrics.fps"

function init(self)
	self.instance = fps.create(self.samples)
end

function update(self, dt)
	fps.update()
	if self.show then
		fps.draw(nil, go.get_world_position(), self.color)
	end
end
